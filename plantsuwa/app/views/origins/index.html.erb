<h1>Listing Origins</h1>

<%= link_to 'New Origin', new_origin_path %>

<table>
	<tr>
		<th>ID</th>
		<th>Name</th>
	</tr>
	
	<% @origins.each do |origin| %>
	<tr>
		<td>#<%= origin.id %></td>
		<td><%= origin.name %></td>
		<td><%= link_to 'Edit', edit_origin_path(origin) %></td>
		<td><%= link_to 'Delete', origin_path(origin), method: :delete, data: { confirm: 'WARNING: Are you sure you want to DELETE this Origin? Doing so will affect all plants with this origin!'} %></td>
	</tr>
	<% end %>
</table>
<br>
<strong>Total Number of Origins: </strong><%= @origins.count %>