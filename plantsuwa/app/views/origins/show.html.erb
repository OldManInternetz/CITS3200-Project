<% provide(:title, @origin.name) %>
<% provide(:prev_page, 'Origins') %>
<% provide(:prev_link, origins_path) %>


	<h1 class="h1-shrink"><span class="preceding-heading"><%= link_to 'Origins', origins_path %> <i class="fa fa-chevron-right"></i></span> <%= @origin.name %></h1>
		<div class="btn-group">

			<%= link_to edit_origin_path(@origin), class: 'btn-top btn btn-orange button-shrink', style: 'float: left;' do %>
				<i class="fa fa-edit"></i><span class="over-500">&nbsp;&nbsp;Edit</span>
			<% end %>
			<%= link_to origin_path(@origin), method: :delete, data: { confirm: 'WARNING: Are you sure you want to DELETE this origin? Doing so will affect all plants with this origin!'}, class: 'btn-top btn btn-orange button-shrink', style: 'float: right;' do %>
				<i class="fa fa-trash-o"></i><span class="over-500">&nbsp;&nbsp;Delete</span>
			<% end %>

		</div>
<hr/>

<p>Plants that are '<%= @origin.name %>':</p>
<%= render 'admin_pages/plants_table' %>