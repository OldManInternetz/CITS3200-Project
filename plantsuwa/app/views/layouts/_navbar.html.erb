<nav class="navbar navbar-inverse navbar-fixed-top">
	<div class="container-fluid">
	  <% if !yield(:prev_page).blank? %>
	    <%= link_to yield(:prev_link) do %>
	    	<div class="navbar-brand navbar-prev-page-block">
	     		<i class="fa fa-chevron-left"></i>&nbsp;&nbsp;<%= truncate(yield(:prev_page), length: 20, escape: false) %>
	      </div>
	    <% end %>
	  <% else %>
	    <%= link_to 'http://www.uwa.edu.au', target: '_blank' do %>
	      <div class="navbar-brand navbar-uwacrest-block">
	        <%= image_tag 'uwacrest-small-2.png', width:"30px", alt:"UWA Logo", style: 'margin-top: -10px; margin-left: 12px' %>
	      </div>
	    <% end %>  
	  <% end %>
	  <div class="navbar-brand navbar-title-block">
	    <p><strong><%= truncate(small_title(yield(:title)), length: 20, escape: false) %></strong></p>
	  </div>
	  <div style="width: 200px; position: absolute; right: 0;">
	    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-navbar-collapse">
		    <span class="sr-only">Toggle navigation</span>
		    <span class="icon-bar"></span>
		    <span class="icon-bar"></span>
		    <span class="icon-bar"></span>
	    </button>
	    <%= link_to search_current_plants_path do %>
	      <p class="navbar-brand navbar-brand-custom" style="padding-right: 9px"><i class="fa fa-search"></i></p>
	    <% end %>
	    <%= link_to root_path do %>
	      <p class="navbar-brand navbar-brand-custom"><i class="fa fa-home fa-lg"></i></p>
	    <% end %>
	  </div>
		<!-- Collect the nav links, forms, and other content for toggling -->
		<div class="collapse navbar-collapse" id="bs-navbar-collapse">
		  <ul class="nav navbar-nav navbar-right">

			  <% if signed_in? %>
				  <li><%= link_to log_out_path, method: "delete" do %>
	            	<% if is_admin?%>
	            		Logged in as <span style="color: #FFB300"><i class="fa fa-star"></i>&nbsp;<%= current_user.username %></span> (Log out)
	            	<% elsif is_trusted? %>
	            		Logged in as <span style="color: #268BFF"><i class="fa fa-star-o"></i>&nbsp;<%= current_user.username %></span> (Log out)
	            	<% else %>
	            		Logged in as <%= current_user.username %></span> (Log out)
	            	<% end %>
	            <% end %>
	        </li>
	      <% else %>
	        <li><%= link_to 'Sign up', sign_up_path %></li>
	      <% end %>

			  <% if not signed_in? %>
			    <li><%= link_to 'Log in', log_in_path %></li>
	      <% end %>

			  <li><a href="#">Site Map</a></li>
			  <li><a href="#">Contact</a></li>
		  </ul>  
		</div><!-- /.navbar-collapse -->
	</div>
</nav>
<% if is_admin? %>
	<div class="navbar-admin-tab">
		<% if @admin_page %>
			<%= link_to current_plants_path do %>
				<p><i class="fa fa-tree"></i>&nbsp;&nbsp;Plants List</p>
			<%end%>
		<% else %>
			<%= link_to climates_path do %>
				<p><i class="fa fa-gavel"></i>&nbsp;&nbsp;Administration</p>
			<%end%>
		<% end %>
	</div>

<% end %>




