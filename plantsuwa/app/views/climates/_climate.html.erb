<tr>
	<td>#<%= climate.id %></td>
	<td><%= link_to climate.name, climate_path(climate) %></td>
	<td class="td-shrink">
	<%= link_to edit_climate_path(climate) do %>
		<i class="fa fa-edit"></i><span class="over-400">&nbsp;&nbsp;Edit</span>
	<% end %>

	</td>
	<td class="td-shrink"><%= link_to climate_path(climate), method: :delete, data: { confirm: 'WARNING: Are you sure you want to DELETE this climate? Doing so will affect all plants with this climate!'} do %>
		<i class="fa fa-trash"></i><span class="over-400">&nbsp;&nbsp;Delete</span>
	<% end %>
	</td>
</tr>