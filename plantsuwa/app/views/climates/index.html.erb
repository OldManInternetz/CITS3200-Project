<hr/>


<table class="table table-striped">
	<thead>
		<tr>
			<th style="width: 5%">ID</th>
			<th>Name</th>
			<th style="width: 90px;" class="th-shrink"></th>
			<th style="width: 90px;" class="th-shrink"></th>
		</tr>
	</thead>
	
	<%= render @climates %>
</table>