<% provide(:title, 'Flower Colours List') %>
<% provide(:prev_page, 'Admin') %>
<% provide(:prev_link, admin_path) %>


	<h1 class="h1-shrink"><span class="preceding-heading"><%= link_to 'Admin', admin_path %> <i class="fa fa-chevron-right"></i></span> All Flower Colours<span class="item-counter">(<%= @flower_colours.count %>)</span></h1>
	<%= link_to new_flower_colour_path, class: 'btn btn-orange button-shrink button-admin-new' do %>
		<i class="fa fa-plus"></i>&nbsp;&nbsp;New<span class="over-350"> Colour</span>
	<% end %>
<hr/>


<table class="table table-striped">
	<thead>
		<tr>
			<th style="width: 5%">ID</th>
			<th>Name</th>
			<th style="width: 90px;" class="th-shrink"></th>
			<th style="width: 90px;" class="th-shrink"></th>
		</tr>
	</thead>
	
	<%= render @flower_colours %>
</table>

