<% provide(:title, 'Flower Colours List') %>
<% provide(:prev_page, 'Admin') %>
<% provide(:prev_link, admin_path) %> <!-- Change later -->


	<h1 class="h1-shrink">All Flower Colours<span class="item-counter">(<%= @flower_colours.count %>)</span></h1>
		<%= link_to '<i class="fa fa-plus"></i>&nbsp;&nbsp;New Flower Colour'.html_safe, new_flower_colour_path, class: 'btn btn-orange button-shrink', style: 'float: right; margin-top: -45px'%>
<hr/>


<table class="table table-striped table-responsive">
	<thead>
		<tr>
			<th style="width: 5%">ID</th>
			<th>Name</th>
			<th style="width: 90px;" class="th-shrink"></th>
			<th style="width: 90px;" class="th-shrink"></th>
		</tr>
	</thead>
	
	<%= render @flower_colours %>
</table>



<script>
	<% @flower_colours.each do |col| %>
		$('#circle-<%= col.id %>').css('background', '<%= (col.name).gsub(/\s+/, '') %>');
	<% end %>
</script>