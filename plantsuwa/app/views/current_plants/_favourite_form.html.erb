<div class="favourite-form">
<% if current_user.favourite?(@current_plant) %>
  <%= link_to destroy_favourite_path(id: @current_plant.id), method: :delete, class: "btn btn-orange btn-shrink", id: "unfavourite-button" do %>
  	<i class="fa fa-star-o fa-lg" title="Unfavourite"></i><span class="over-400">&nbsp;&nbsp;Unfavourite</span>
  <% end %>
<% else %>
  <%= link_to create_favourite_path(id: @current_plant.id), method: :post, class: "btn btn-orange btn-shrink", id: "favourite-button" do %>
  	<i class="fa fa-star fa-lg" title="Favourite"></i><span class="over-400">&nbsp;&nbsp;Add Favourite</span>
  <% end %>
<% end %>
</div>
