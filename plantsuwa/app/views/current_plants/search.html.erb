<% if @searched %>
	<% provide(:title, 'Results') %>
	<% provide(:prev_page, 'Search') %>
	<% provide(:prev_link, search_current_plants_path) %>
<% else %>
	<% provide(:title, 'Search') %>
	<% provide(:prev_page, 'Home') %>
	<% provide(:prev_link, root_path) %>
<% end %>

<style type="text/css">
	label.checkbox {
		color: white;
	}
	.dropdown-checkboxes {
		border-color: #111;
		background: #111;
		border-radius: 0;
	}
</style>

<div class="padding-mobile">
	


	<% if @searched %>
	
	<div class="center-wrapper">
  	<div class="center-wrapper-inner">
  		<br/>
			<dt><%= pluralize(@results_count, 'plant') %> found.</dt>
		</div>
	</div>
	<div style="height: 10px"></div>
	
	<!--
	<div class="center-wrapper">
	 	<div class="center-wrapper-inner">
			<button class="btn btn-orange" id="search-another-button" style="padding-left: 50px; padding-right: 50px"><i class="fa fa-search-plus"></i>&nbsp;&nbsp;Search Again?</button>
		</div>
	</div>
	-->
	
		<div class="center-wrapper">
	  	<div class="center-wrapper-inner">
				<h2>Search Results: </h2>
			</div>
		</div>

		<% if @results_count > 0 %>

			<table class="table table-striped">
				<thead>
					<tr>
						<th style="width: 40px"></th>
						<th>Name</th>
						<th style="width: 40px"></th>
					</tr>
				</thead>
				<tbody>
					<%= render partial: 'current_plant_search_result', collection: @current_plants, as: 'current_plant' %>
				</tbody>
			</table>

		<% end %>

		

	<hr/>	
	<!--
	<div class="center-wrapper">
	 	<div class="center-wrapper-inner">
			<button class="btn btn-orange" id="search-another-button" style="padding-left: 50px; padding-right: 50px"><i class="fa fa-search-plus"></i>&nbsp;&nbsp;Search Again!</button>
		</div>
	</div>
	<br/>
	-->

	<% end %>


	<% if !@searched %>
		<%= render 'search_form' %>
		<div style="height: 40px"></div>
	<% end %>

</div>


<div style="height: 40px"></div>

<% if signed_in? %>
  <div style="height: 30px"></div>
  <% if is_trusted? %>
    <%= render 'layouts/ui/action_tab_favourites' %>
    <%= render 'layouts/ui/action_tab_new' %>
  <% else %>
    <%= render 'layouts/ui/action_tab_favourites_large' %>
  <% end %>
<% end %>

<%= render 'layouts/ui/bottom_tabs_default' %>


<script type="text/javascript">
	<% if @searched %>
		$("#search-form-hidden").hide();
	<% end %>
	
