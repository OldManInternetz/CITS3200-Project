<h1>Listing notifications</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Action</th>
      <th>Current plant</th>
      <th>Time</th>
      <th style="width: 20%"></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @notifications.each do |notification| %>
      <tr>
        <td><%= notification.user.username %></td>
        <td><%= notification.action %></td>
        <td><%= link_to notification.current_plant.name, notification.current_plant %></td>
        <td><%= notification.created_at.to_s(:short) %></td>
        <td></td>
        <td><%= link_to 'Show', notification %></td>
        <td><%= link_to 'Edit', edit_notification_path(notification) %></td>
        <td><%= link_to 'Destroy', notification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Notification', new_notification_path %>
