<%= simple_form_for(@notification) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_id %>
    <%= f.input :current_plant_id %>
    <%= f.input :action %>
    <%= f.input :changes_made %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
