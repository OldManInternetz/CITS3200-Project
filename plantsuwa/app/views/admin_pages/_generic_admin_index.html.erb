<% provide(:prev_page, 'Admin') %>
<% provide(:prev_link, admin_path) %>


	<h1 class="h1-shrink"><span class="preceding-heading"><%= link_to 'Admin', admin_path %> <i class="fa fa-chevron-right"></i></span> All <%= title_name %>s<span class="item-counter">(<%= objects.count %>)</span></h1>
	<% if new_object_path %>
		<%= link_to new_object_path, class: 'btn btn-orange button-shrink', style: 'float: right; margin-top: -45px' do %>
			<i class="fa fa-plus"></i>&nbsp;&nbsp;New<span class="over-350"> <%= button_name %></span>
		<% end %>
	<% end %>
<hr/>


<table class="table table-striped">
	<thead>
		<tr>
			<th style="width: 5%">ID</th>
			<th>Name</th>
			<th style="width: 90px;" class="th-shrink"></th>
			<th style="width: 90px;" class="th-shrink"></th>
		</tr>
	</thead>
	<tbody>
		<%= render objects %>
	</tbody>
</table>

<%= render partial: 'admin_pages/generic_admin_pagination', locals: {objects: objects} %>