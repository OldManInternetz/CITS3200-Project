<% if !@current_plants.any? %>
	<p>... there are no plants to display.</p>
<% else %>
	<table class="table table-striped table-responsive">
		<thead>
			<tr>
				<th style="width: 5%">ID</th>
				<th>Name</th>
			</tr>
		</thead>
		<% @current_plants.each do |plant| %>
			<tr>
				<td style="width: 5%">#<%= plant.id %></td>
				<td><%= link_to plant.name, current_plant_path(plant) %></td>
			</tr>
		<% end %>
	</table>
	<hr>
	<p><%= pluralize(@current_plants.count, 'plant') %> total.</p>
<% end %>