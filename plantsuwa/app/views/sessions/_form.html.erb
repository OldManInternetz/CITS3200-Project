<%= simple_form_for(:session, url: sessions_path(pp_path: params[:pp_path]), html: { class: 'form-horizontal' }, defaults: { input_html: { class: 'form-control' } }) do |f| %>

	<div class="row">
		<div class="col-sm-6">
  		<%= f.input  :username, autofocus: true %>
  	</div>
  	<div class="col-sm-6">
  		<%= f.input  :password %>
  	</div>
  </div>

  <br/>
  <hr/>

  <div class="center-wrapper">
  	<div class="center-wrapper-inner">
  		<%= f.button :submit, 'Log In', class: "button btn-success", style: "min-width: 200px", id: "log-in-button" %>
  	</div>
  </div>

<% end %>
