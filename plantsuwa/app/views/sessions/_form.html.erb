<%= simple_form_for(:session, url: sessions_path, html: { class: 'form-horizontal' }, defaults: { input_html: { class: 'form-control' } }) do |f| %>

  <%= f.input  :username, autofocus: true %>
  <%= f.input  :password %>

  <br/>
  <hr/>
  <%= f.button :submit, 'Log In', class: "button btn-success" %>

<% end %>
