<%= simple_form_for(@user, html: { class: 'form-horizontal' }, defaults: { input_html: { class: 'form-control' } }) do |f| %>

  <%= f.input  :username, autofocus: true %>
  <%= f.input  :email %>
  <%= f.input  :password %>
  <%= f.input  :password_confirmation %>

  <br/>
  <hr/>
  <%= f.button :submit, 'Sign Up', class: "button btn-success" %>

<% end %>
