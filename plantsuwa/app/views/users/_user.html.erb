<tr>
	<td>#<%= user.id %></td>
	<td><%= link_to formatted_username(user), user_path(user) %></td>
	<td class="td-shrink">
	<%= link_to edit_user_path(user) do %>
		<i class="fa fa-edit"></i><span class="over-400">&nbsp;&nbsp;Edit</span>
	<% end %>

	</td>
	<% if user.admin? %>
		<td class="td-shrink" style="color: #444"><i class="fa fa-ban"></i><span class="over-400" style="color: #444">&nbsp;&nbsp;(Admin)</span></td>
	<% else %>
		<td class="td-shrink"><%= link_to user_path(user), method: :delete, data: { confirm: confirmation_message('user') } do %>
			<i class="fa fa-trash"></i><span class="over-400">&nbsp;&nbsp;Delete</span>
		<% end %>
	<% end %>	
	</td>
</tr>